<%= content_for :body do %>
	<%= form_for :time_entry_activity, url: "/admin/create", method: "post" do |f| %>
		<%= f.label :name, "Activity name:" %>
		<%= f.text_field :name %>
		<br/>
		<%= f.label :active, "Active?" %>
		<%= f.check_box :active %>
		<br/>
		<%= f.submit "Create Activity" %>
	<% end %>
<% end %>