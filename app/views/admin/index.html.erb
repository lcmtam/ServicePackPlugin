<% content_for :body do %>
  <h2>Activities</h2>
  <a href="/admin/new">Create new activity</a>
  <br/>
  <br/>
  <div class="table-container">
      <table id="enum">
          <tr>
            <th>Name</td>
            <th>Active</td>
            <th>Control</td> <!-- config columns -->
          </tr>
          <% @enums.each do |t|%>
            <tr>
              <td><%= link_to t.name, edit_time_entry_activity_path(t.id) %></td>
              <td><%= (t.active ? "&#x2713" : "<strong>X</strong>").html_safe %></td>
              <td>config here! &nbsp;</td> <!-- delete columns -->
            </tr>
          <% end %>
      </table>
  </div>
<% end %>